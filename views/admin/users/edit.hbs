<header>
  <div class="container">
    <h1>Welcome, {{loggedUser.name}}</h1>
    <h3>Edit users</h3>
  </div>
</header>

<div id="gamer-profile" class="container">
  <figure><img src="{{loggedUser.photoURL}}" alt=""></figure>
</div>


<div id="update-user">
  <form class="col s6 offset-s3" action="/admin/users/edit/{{user._id}}" method="POST">
  <div class="field">
  <label class="label">Name</label>
  <input class="input" type="text" name="name" placeholder="Title" value="{{user.name}}">
</div>

<div class="field">
  <label class="label">Role</label>
  <div class="control">
    <div class="select">
      <select name="role" id="role">
        <option>Select dropdown</option>
        <option value="Gamer">Gamer</option>
        <option value="Admin">Admin</option>
      </select>
    </div>
  </div>
</div>

<div class="field is-grouped">
  <div class="control">
    <button type="submit" value="Edit User" class="button is-info">Edit User</button>
  </div>
</div>
</form>
</div>
