  <figure><img src="{{loggedUser.photoURL}}" alt=""></figure>
</div>

<div id="gamer-profile" class="container">
  <h2><i class="fas fa-award"></i>&nbsp;Users</h2>

<section id="users-container">
{{#each users as |user|}}
      <article>
        <h3 class="user-name">{{user.name}}</h3>
        <form action="/admin/users/delete/{{user._id}}" method="POST">
            <button id="delete-games-admin" type="submit" class="delete-favs button is-danger">Delete user</button>
        </form> 
        <form action="/admin/users/edit/{{user._id}}" method="POST">
            <button type="submit" class="delete-favs button is-info">Edit user</button>
            </form> 
      </article>
      {{/each}}
  </section>
</div>