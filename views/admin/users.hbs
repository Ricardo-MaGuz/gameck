<header>
  <div class="container">
    <h1>Welcome, {{loggedUser.name}}</h1>
    <h3>Edit or delete the users</h3>
  </div>
</header>

<div id="gamer-profile" class="container">
  <figure><img src="{{loggedUser.photoURL}}" alt=""></figure>
</div>

<div style ="display: flex; flex-wrap: wrap;">

{{#each users as |user|}}


<div class="card" style="width: 30%; margin: 20px;">
    <div class="card-image waves-effect waves-block waves-light">
        <a href= "/admin/users/{{user._id}}">
        <img class = "activator" src = "{{user.image}}" alt= "{{user.name}}" width="200px"/>
        </a>
    </div>

    <div class="card-content">
        <a href= '/users/{{user._id}}'>
        <span class="card-title grey-text text-darken-4">{{user.name}}</span>
        </a>
    </div>

    <footer class="card-footer">
    <a href="/admin/users/delete/{{user._id}}" class="button is-info">Delete user</a>
    <a href="/admin/users/user-details/{{user._id}}" class="button is-info">See user</a>
    </footer>
</div>
{{/each}}
</div>