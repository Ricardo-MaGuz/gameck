<header id="profile-hero">
  <div class="container">
    <h1>Welcome, {{loggedUser.name}}</h1>
    <h3>Edit or delete the games</h3>
  </div>
</header>

<div id="gamer-profile" class="container">
  <h2><i class="fas fa-award"></i>&nbsp;Our Extensive Library</h2>

<section id="games-container">
      {{#each games as |game|}}
      <article>
        <h3 class="game-title">{{game.title}}</h3>
        <form action="/admin/games/delete/{{game._id}}" method="POST">
            <button id="delete-games-admin" type="submit" class="delete-favs button is-danger">Delete game</button>
        </form> 
        <a href= "/admin/games/game-details/{{game._id}}">
            <img src = "{{game.thumbnail}}" alt= "{{game.title}}" />
          </a>
      </article>
      {{/each}}
  </section>
</div>
